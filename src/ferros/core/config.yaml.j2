provider:
  api_key: {{ env.MODEL_API_KEY }}
  base_url: {{ env.MODEL_BASE_URL }}

redis:
    blackboard:
        host: {{env.BLACKBOARD_REDIS_HOST | default('127.0.0.1')}}
        port: {{env.BLACKBOARD_REDIS_PORT | default(6379)}}
        db: {{env.BLACKBOARD_REDIS_DB | default(1)}}
        username: {{env.BLACKBOARD_REDIS_USERNAME | default('') }}
        password: {{env.BLACKBOARD_REDIS_PASSWORD | default('') }}

    registry:
        host: {{env.REGISTRY_REDIS_HOST | default('127.0.0.1')}}
        port: {{env.REGISTRY_REDIS_PORT | default(6379)}}
        db: {{env.REGISTRY_REDIS_DB | default(1)}}
        username: {{env.REGISTRY_REDIS_USERNAME | default('') }}
        password: {{env.REGISTRY_REDIS_PASSWORD | default('') }}

context:
    name: 'Context Builder'
    model: {{ env.CONTEXT_BUILDER_MODEL }}
    model_settings:
        temperature: {{ env.CONTEXT_BUILDER_TEMPERATURE }}
        max_tokens: {{ env.CONTEXT_BUILDER_MAX_TOKENS }}

planner:
    name: 'Planner'
    model: {{ env.PLANNER_MODEL }}
    model_settings:
        temperature: {{ env.PLANNER_TEMPERATURE }}
        max_tokens: {{ env.PLANNER_MAX_TOKENS }}
